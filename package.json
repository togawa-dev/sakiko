{
    "name": "sakiko-workspaces",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/core/*",
        "packages/adapter/*",
        "packages/plugin/*",
        "packages/protocol/*",
        "bench/*",
        "test/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@types/bun": "^1.3.5",
        "@types/node": "^24.10.4",
        "prettier": "^3.7.4",
        "tsup": "^8.5.1"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
    },
    "scripts": {
        "check": "bun run typecheck && bun run lint",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "deps:install": "bun install",
        "deps:update": "bun update -r",
        "deps:update:latest": "bun update -r --latest",
        "build:topo": "bun run ./script/run-workspace-topo.ts build",
        "clean:topo": "bun run ./script/run-workspace-topo.ts clean",
        "build": "bun run --filter './packages/*' build",
        "build:sakiko": "bun run --filter './packages/core/sakiko' build",
        "build:umiri": "bun run --filter './packages/core/umiri' build",
        "build:uika": "bun run --filter './packages/core/uika' build",
        "build:utils": "bun run --filter './packages/core/utils' build",
        "build:protocol-milky": "bun run --filter './packages/protocol/protocol-milky' build",
        "build:adapter-milky": "bun run --filter './packages/adapter/adapter-milky' build",
        "clean": "bun run --filter './packages/*' clean",
        "changeset": "bunx changeset",
        "version": "bunx changeset version",
        "publish:ci": "bunx changeset publish",
        "release": "bun run version && bun run build && bun run publish:ci"
    },
    "packageManager": "bun@1.3.3"
}
