{
    "name": "sakiko-workspaces",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@changesets/cli": "^2.29.8",
        "@types/bun": "^1.3.4",
        "@types/node": "^24.10.3",
        "prettier": "^3.7.4",
        "tsup": "^8.5.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    },
    "scripts": {
        "check": "bun run typecheck && bun run lint",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "deps:install": "bun install",
        "deps:update": "bun update -r",
        "deps:update:latest": "bun update -r --latest",
        "build:topo": "bun run ./scripts/run-workspace-topo.ts build",
        "clean:topo": "bun run ./scripts/run-workspace-topo.ts clean",
        "build": "bun run --filter './packages/*' build",
        "clean": "bun run --filter './packages/*' clean",
        "changeset": "bunx changeset",
        "version": "bunx changeset version",
        "publish:ci": "bunx changeset publish",
        "release": "bun run version && bun run build && bun run publish:ci"
    },
    "packageManager": "bun@1.3.3"
}
